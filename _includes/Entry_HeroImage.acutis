<!-- Entry_HeroImage -->
<img
  src='{% ImgSrc height=450 width=900 gravity="auto" image /%}'
  srcset='
    {%~ match build with {heroImageBreakpoints}
       map heroImageBreakpoints with {height, width} %}
      {%~ ImgSrc gravity="auto" height width image /%} {{ width }}w,
    {%~ /map /match ~%}
  '
  sizes="(max-width: 900px) 100vw, 900px"
  alt="{{ alt }}"
  class="entry__hero-image"
  height="450"
  width="900"
  loading="lazy"
/>
<!-- /Entry_HeroImage -->